{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "main": "./server/lib/index.js",
  "dependencies": {
    "@types/node": "^11.13.2",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "express-favicon": "^2.0.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "client-install": "npm install",
    "server": "nodemon --watch 'server/src/**/*.ts' --exec 'ts-node' server/src/index.ts",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "start": "cd server/lib && node index.js",
    "build": "tsc -w",
    "build:live": "nodemon --watch 'server/src/**/*.ts' --exec 'ts-node' server/src/index.ts"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
