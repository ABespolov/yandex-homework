{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "main": "./server/lib/index.js",
  "dependencies": {
    "@types/node": "^11.13.2",
    "axios": "^0.18.0",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "express-favicon": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^18.2.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "client-install": "npm install",
    "server": "nodemon --watch 'server/src/**/*.ts' --exec 'ts-node' server/src/index.ts",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "start": "cd server/lib && node index.js",
    "build": "tsc -w",
    "stylelint": "stylelint \"client/src/**/*.scss\" --fix",
    "tslint": "tslint client/src/**/*.{ts,tsx} --fix && tslint server/src/**/*.{ts,tsx} --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,ts,tsx}": [
        "tslint --fix",
        "git add"
      ],
      "*.{css,less,scss}": [
        "stylelint --fix",
        "git add"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
